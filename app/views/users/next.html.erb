<%= form_for(@user, url: user_path(@user)) do |form| %>
  <%= render "shared/form_error_messages", f: form%>
  <fieldset>
    <div class="form-group m-b-20">
      <%= form.date_field :birthday, placeholder:"Birthday", class:"form-control input-lg"%>
    </div>

    <div class="form-group m-b-20">
      <%= form.select :gender,%w(Male Female Non-binary) ,placeholder:"Gender", class:"form-control input-lg"%>
    </div>

    <div class="form-group m-b-20">
      <%= form.text_field :university, placeholder:"University.", class:"form-control input-lg"%>
    </div>
  </fieldset>
  <div class="login-buttons">
    <%= html_submit(content=fa_icon('user-plus', :text => "Sign up"), extra={class: "btn btn-success btn-block btn-lg"}) %>
  </div>
<% end %>
