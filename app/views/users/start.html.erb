<%= form_for(@user, url: users_path) do |form| %>
  <%= render "shared/form_error_messages", f: form%>
  <fieldset>
    <div class="form-group m-b-20">
      <%= form.text_field :first_name, placeholder:"First Name", class:"form-control input-lg"%>
    </div>

    <div class="form-group m-b-20">
      <%= form.text_field :last_name, placeholder:"Last Name", class:"form-control input-lg"%>
    </div>

    <div class="form-group m-b-20">
      <%= form.email_field :email, autofocus: true , placeholder:"Email Address", class:"form-control input-lg"%>
    </div>

    <div class="form-group m-b-20">
      <%= form.password_field :password,  placeholder:"Password", class:"form-control input-lg"%>
    </div>

    <div class="form-group m-b-20">
      <%= form.password_field :password_confirmation,  placeholder:"Password Confirmation", class:"form-control input-lg"%>
    </div>
  </fieldset>
  <div class="login-buttons">
    <%= html_submit(content=fa_icon('user-plus', :text => "Sign up"), extra={class: "btn btn-success btn-block btn-lg"}) %>
  </div>
<% end %>
